<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Chiirz- {% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="shortcut icon" href="{{ asset('img/favicon.ico') }}" type="image/x-icon">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            
            <script src="{{ asset('js/main.js') }}" defer></script>

        {% endblock %}
    </head>

    
    <body>
        {% block header %}
            <header>
                {% include 'partials/_nav.html.twig' %}
            </header>
        {% endblock %}
        <main> 
            <div class="container">
                {% block body %}{% endblock %}
            </div>
            
            </div>
        </main>
        
        <footer class="footer">
            <div class="footer__content">
                <!-- logo et smiley-->
                <div class="footer__content__logo">
                    <img src="{{ asset('img/logo.png') }}" alt="logo de Chiirz">
                    <img src="{{ asset('img/smart-smiley.png') }}" alt="smiley">
                </div>

                
                <!-- nav + btn-->
                <div class="footer__content__div ">
                    <!-- nav -->
                    
                    <div class="footer__content__div__nav">
                        <article>
                            <div> 
                                <img src="{{ asset('img/house.png') }}" alt="accueil">
                                <h4 class="title title--footer"> Accueil </h4>
                            </div>
                            <ul class="p-20">
                                <li> 
                                    <a href="#choose"> Je choisis ma ville </a>
                                </li>
                                <li> 
                                    <a href="#what"> Chiirz c'est quoi ? </a>
                                </li>
                            </ul>
                        </article>

                        <article>
                            <div> 
                                <img src="{{ asset('img/city-night.png') }}" alt="accueil">
                                <h4 class="title title--footer"> Villes </h4>
                            </div>
                            <ul class="p-20">
                                <li> 
                                    <a href="#"> Paris </a>
                                </li>
                                <li> 
                                    <a href="#"> Lyon </a>
                                </li>
                                <li> 
                                    <a href="#"> Strasbourg </a>
                                </li>
                            </ul>
                        </article>

                        <article>
                            <div> 
                                <img src="{{ asset('img/utils.png') }}" alt="accueil">
                                <h4 class="title title--footer"> Utilitaires </h4>
                            </div>
                            <ul class="p-20">
                                <li> 
                                    <a href="#"> Mon compte </a>
                                </li>
                                <li> 
                                    <a href="#"> Créer une route </a>
                                </li>
                                <li> 
                                    <a href="#"> Découvrir les route </a>
                                </li>
                            </ul>
                        </article>
                    </div>
                    
                    <!-- btn -->      
                    <div class="footer__content__div__btn nav__content-btn p p--16">
                        <a href="#" > Se connecter </a>
                        <a href="#" class="btn btn--secondary"> S'inscrire </a>
                    </div>      
                </div>
                
                <!-- Mentions légales-->
                <div class="footer__content__mentions-legales p-20">
                    <a href="/mention_legales"> Mentions légales </a>
                    <a href="mailto: lilidebieve@yahoo.fr"> Contact </a>
                </div>  

            </div>              
        </footer>

    </body>
</html>
